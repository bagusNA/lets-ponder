                     <children>
                        <Button alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" style="-fx-background-color: transparent;" text="Home" textAlignment="CENTER">
                           <graphic>
                              <FontIcon iconLiteral="fas-home" />
